{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "${workspaceFolder}/src/*.cpp",
                "-fdiagnostics-color=always",
                "-framework", "CoreFoundation",
                "-I", "${workspaceFolder}/inc",
                "-D", "HAVE_CONFIG_H=1",

                "-g", 
                "-o", "${workspaceFolder}/bin/djvudump_app"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
